<?xml version='1.0' encoding='utf-8'?>
<addons><addon id="repository.mattrangel" name="MattRangel Repository" version="1.0.0" provider-name="MattRangel">
    <extension point="xbmc.addon.repository" name="MattRangel Repository">
        <dir>
            <info compressed="false">https://raw.githubusercontent.com/MattRangel/repository.mattrangel/master/repo/zips/addons.xml</info>
            <checksum>https://raw.githubusercontent.com/MattRangel/repository.mattrangel/master/repo/zips/addons.xml.md5</checksum>
